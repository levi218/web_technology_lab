doctype html
html
	include head.pug
	body
		include menu.pug

		div(class="pagebody")
			h1 My items
			a(href="/add") Create new offer
			div
				each item in data
					a(href="/detail/"+item.itemId,class="item")
						img(src="/img/"+item.picture)
						span(class="itemName")= item.name
						span= "Current price: "+(item.participants.length>0?item.participants[0].price:item.start_price)
